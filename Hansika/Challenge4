#print(total)
input_string = input("\n" "Please enter every category where your animal separated by a space: ")
userList = input_string.split()
#print("user list is ", userList)

#print("Calculating sum of element of input list")
sum = 0
for num in userList:
    sum += int(num)
if (sum == 1):
  print("Your favorite animal is Dog")
elif(sum == 2):
  print("Your favorite animal is Cat")
elif (sum == 3):
  print("Your favorite animal is Mouse")
elif (sum == 4):
  print("Your favorite animal is Lion")
elif(sum == 5):
  print("Your favorite animal is Tiger")
elif(sum == 6):
  print("Your favorite animal is Monkey")
elif(sum == 7):
  print("Your favorite animal is Snake")
elif(sum == 8):
  print("Your favorite animal is Giraffe")
elif (sum == 9):
  print("Your favorite animal is Elephant")
elif (sum == 10):
  print("Your favorite animal is Cheetah")
